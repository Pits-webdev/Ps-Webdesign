{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@assets/*": ["./src/assets/*"],
            "@pages/*": ["./src/pages/*"],
            "@styles/*": ["./src/styles/*"],
            "lib/*": ["./src/lib/*"],
            "@utils/*": ["./src/utils/*"]
    }
  }
}
